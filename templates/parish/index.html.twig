{% extends 'base.html.twig' %}

{% block title %}Parish List{% endblock %}

{% block pageheader %}
    <h1>Parish List</h1>
    <p class="count">
        Displaying {{ parishes|length }} parishes of {{ parishes.getTotalItemCount }} total.
    </p>
{% endblock %}

{% block action_buttons %}
    {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <a href="{{ path('parish_new') }}" class="btn btn-light">
            <span class="bi bi-plus-lg"></span> New
        </a>
    {% endif %}
{% endblock %}

{% block body %}
    {% embed '@NinesUtil/term/partial/index.html.twig'
        with {'terms': parishes, 'path': 'parish_show'} %}
    {% endembed %}
{% endblock %}
