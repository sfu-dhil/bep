{% extends 'base.html.twig' %}

{% block title %}Province List{% endblock %}

{% block pageheader %}
    <h1>Province List</h1>
    <p class="count">
        Displaying {{ provinces|length }} provinces of {{ provinces.getTotalItemCount }} total.
    </p>
{% endblock %}

{% block action_buttons %}
    {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <a href="{{ path('province_new') }}" class="btn btn-light">
            <span class="bi bi-plus-lg"></span> New
        </a>
    {% endif %}
{% endblock %}

{% block body %}
    {% embed '@NinesUtil/term/partial/index.html.twig'
        with {'terms': provinces, 'path': 'province_show'} %}
    {% endembed %}
{% endblock %}
