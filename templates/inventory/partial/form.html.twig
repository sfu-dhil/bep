{{ form_widget(form) }}
<div class="mb-3 text-center">
    <input type="submit" value="Save" class="btn btn-primary" />
    {% if inventory.id is null %}
        <a href="{{ path('inventory_index') }}" class="btn btn-warning"> Cancel </a>
    {% else %}
        <a href="{{ path('inventory_show', { 'id': inventory.id }) }}" class="btn btn-warning"> Cancel </a>
    {% endif %}
</div>
{{ form_end(form) }}

