{% extends 'base.html.twig' %}

{% block title %}Surviving Text List{% endblock %}

{% block pageheader %}
    <h1>Surviving Text List</h1>
    <p class="count">
        Displaying {{ holdings|length }} surviving texts of {{ holdings.getTotalItemCount }} total.
    </p>
{% endblock %}

{% block action_buttons %}
    {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <a href="{{ path('holding_new') }}" class="btn btn-light">
            <span class="bi bi-plus-lg"></span> New
        </a>
    {% endif %}
{% endblock %}

{% block body %}
    {% embed 'holding/partial/table.html.twig' %}
    {% endembed %}

    <div class="navigation">
        {{ knp_pagination_render(holdings) }}
    </div>

{% endblock %}
