<table class="table table-bordered table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Parish</th>
            <th>Book</th>
        </tr>
    </thead>
    <tbody>
        {% for holding in holdings %}
            <tr>
                <td>
                    <a href="{{ path('holding_show', { 'id': holding.id }) }}">
                        {% include 'partial/short-date.html.twig' with {'entity': holding} %}
                    </a>
                </td>
                <td>
                    <a href='{{ path('parish_show', {'id': holding.parish.id}) }}'>
                        {{ holding.parish }}
                    </a>
                </td>
                <td>
                    {% for book in holding.books %}
                    <a href='{{ path('book_show', {'id': book.id}) }}'>
                        {{ book -}}
                    </a>{% if not loop.last %}, {% endif %}
                    {% endfor %}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>